---
import { ArrowIcon } from "@components/icons/Arrow";
import Tag from "./Tag.astro";

const { job, startDate, endDate, company, website, description, techs } =
  Astro.props;
---

<div class="w-full mx-auto flex flex-col gap-3">
  <div>
    <span class="font-medium text-sm">
      {startDate} - {endDate}
    </span>
    <h3 class="text-xl font-semibold text-gray-800">{job}</h3>
    <a
      href={website}
      target="_blank"
      class="flex items-center gap-1 text-sm font-medium hover:text-teal-500"
    >
      {company}
      <ArrowIcon />
    </a>
  </div>
  <p class="text-sm">{description}</p>
  <div class="w-full flex flex-wrap gap-1">
    {
      techs.map((tech: string) => {
        return <Tag name={tech} />;
      })
    }
  </div>
</div>
